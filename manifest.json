{
  "name": "TF2 Trading Enhanced",
  "description": "Adds additional features to backpack, outpost and steam.",
  "version": "1.0.1",
  "manifest_version": 2,

  "content_scripts": [
    {
      "matches": [
      "*://backpack.tf/classifieds*",
      "*://www.tf2outpost.com/*",
      "*://steamcommunity.com/tradeoffer/*",
      "*://steamcommunity.com/*/tradeoffers/sent/",
      "*://steamcommunity.com/id/*",
      "*://steamcommunity.com/profiles/*"],
      "js": ["js/library/jquery-3.1.0.min.js","js/library/bootstrap.min.js",
      "js/init.js","js/backpack.js","js/outpost.js","js/profile_page.js","js/trade_offer.js","js/content.js"]
    }
  ],

  "icons": {
    "16": "images/halloween_icon16.png", 
		"128": "images/halloween_icon128.png" 
	}
}